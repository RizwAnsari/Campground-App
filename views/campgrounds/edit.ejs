<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center mb-4">Edit <%= camp.name %></h1>
    <div style="max-width: 350px; margin: 0 auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group"> 
                <input class="form-control" type="text" name="edit[name]" value="<%= camp.name %>" id="">
            </div>
            <div class="form-group"> 
                <input class="form-control" type="text" name="edit[image]" value="<%= camp.image %>" id="">
            </div>
            <div class="form-group"> 
                <input class="form-control" type="number" name="edit[price]" value="<%= camp.price %>" min="0.1" step="0.1" id="">
            </div>
            <div class="form-group"> 
                <textarea class="form-control" name="edit[description]" id=""><%= camp.description %></textarea>
            </div>
            <div class="form-group"> 
                <button class="btn btn-primary btn-block">Edit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>