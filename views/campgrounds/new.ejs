<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center mb-4">Create a New Campground</h1>
    <div style="max-width: 350px; margin: 0 auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group"> 
                <input class="form-control" type="text" name="name" placeholder="Campground Name" id="">
            </div>
            <div class="form-group"> 
                <input class="form-control" type="text" name="image" placeholder="Image URL" id="">
            </div>
            <div class="form-group"> 
                <input class="form-control" type="number" name="price" placeholder="Price" min="0.1" step="0.1" id="">
            </div>
            <div class="form-group"> 
                <textarea class="form-control" name="description" placeholder="Description" id=""></textarea>
            </div>
            <div class="form-group"> 
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>