<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center mb-4">Edit Comment</h1>
    <div style="max-width: 350px; margin: 0 auto;">
        <form action="/campgrounds/<%= camp_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group"> 
                <textarea class="form-control" name="edit[text]" id=""><%= comment.text %></textarea>
            </div>
            <div class="form-group"> 
                <button class="btn btn-primary btn-block">Edit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp_id %>">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>